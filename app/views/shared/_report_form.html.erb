<%= form_for @report, remote: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="fix_report">
    <div class="container">
      <div>
        <br style="clear:both">
        <div class="form-group col-md-4 control_content_report">
          <br>
          <label id="messageLabel" for="message"><%= t "report.write_new" %></label>
          <%= f.text_area :content, placeholder: t("report.content_demo"), class: "form-control input-sm content_report ", id: "content_report_new" %>
        </div>

        <div id="home_search_form_1" class="home_search_form d-flex flex-lg-row flex-column align-items-center justify-content-between">
          <div class="d-flex flex-row align-items-center justify-content-start">
            <label>Task</label>
            <div class="select-left">
              <%= select_tag "report[task_content]", options_for_select(@tasks.collect {|task| [task.content, task.content]}),
                             include_blank: true, selected: :task_content, class: "custom-select col-md-4" %>
            </div>

            <label>Subtask</label>
            <div class="select-right">
              <%= select_tag "report[subtask_content]", options_for_select(@subtask.collect {|subtask| [subtask.content, subtask.content]}),
                             include_blank: true, selected: :subtask_content, class: "custom-select col-md-4" %>
            </div>
          </div>

          <div class="form-group col-md-2 control_report_submit" , id="submit_post">
            <%= f.submit t("report.post"), class: "form-control input-sm btn btn-success disabled submit_report" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
