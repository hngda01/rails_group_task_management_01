<div class="modal fade" id="squarespaceModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only"></span></button>
        <h3 class="modal-title" id="lineModalLabel">
          <%= t "index_admin.create_task" %>
        </h3>
      </div>
      <div class="modal-body">
        <%= form_for @task do |f| %>
        <%= f.hidden_field :group_id, value: @group.id %>
        <div class="form-group">
          <label for="exampleInputEmail1"><%= t "tasks.title" %></label>
          <%= f.text_field :title, class: "form-control", placeholder: t("task.title") %>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1"><%= t "groups.description" %></label>
          <%= f.text_field :content, class: "form-control", placeholder: t("groups.description") %>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1"><%= t "tasks.deadline" %></label>
          <br>
          <center>
            <%= f.date_field :start_date %> -
            <%= f.date_field :end_date %>
          </center>
        </div>
        <hr>
        <div id="child_fields">
          <li id="add-date">
            <%= link_to t("task.add_subtask"), "#", id: "addbut", format: :js %>
          </li>
          <%= f.fields_for :subtasks do |builder| %>
          <li>
            <%= render "groups/subtask", ff: builder %>
          </li>
          <% end %>
          <%= f.submit t("task.submit"), class: "btn btn-lg btn-primary btn-block btn-signin" %>
          <% end %>
        </div>
        <div class="modal-footer">
        </div>
      </div>
    </div>
  </div>
</div>
